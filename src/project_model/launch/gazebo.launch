<launch>
  <group ns="robshift">

    <include
      file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="paused" value="true"/>
    </include>

    <param name="robot_description" command="cat $(find project_model)/urdf/RobShift.urdf" />

    <node
      name="tf_footprint_base"
      pkg="tf"
      type="static_transform_publisher"
      args="0 0 0 0 0 0 base_link base_footprint 40" />

    <node
      name="spawn_model"
      pkg="gazebo_ros"
      type="spawn_model"
      args="-param /robshift/robot_description -urdf -model rob_shift"
      output="screen" />

    <rosparam file="$(find project_model)/config/RobShift_controller.yaml" command="load"/>

    <node
      name="spawn_controller"
      pkg="controller_manager"
      type="spawner"
      respawn="false"
      output="screen"
      ns="/robshift"
      args="joint_state_controller arm_controller"/>

  </group>
</launch>
